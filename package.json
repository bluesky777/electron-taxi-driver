{
  "name": "radio-taxi",
  "version": "0.1.2",
  "description": "Aplicaci√≥n para control de los Taxis en RadioTaxi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "build": "build --mac --win",
    "build-mac": "build --mac",
    "dist": "build -p always --x64 --ia32",
    "never": "build -p never --x64 --ia32",
    "publish": "build --mac --win -p always",
    "postinstall": "install-app-deps"
  },
  "repository": "https://github.com/bluesky777/electron-taxi-driver.git",
  "keywords": [
    "Radio",
    "Taxi",
    "Control"
  ],
  "author": "Guillermo Marcos",
  "license": "CC0-1.0",
  "build": {
    "appId": "taxiSystem",
    "mac": {
      "category": "com.transport.taxi.system"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.16",
    "electron-updater": "^3.0.3",
    "ip": "^1.1.5",
    "node-excel-export": "^1.4.4"
  },
  "devDependencies": {
    "@angular/cli": "^6.0.5",
    "electron": "^9.4.0",
    "electron-builder": "^20.28.2",
    "electron-reload": "^1.2.5"
  }
}
